<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="160dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/ten_dp"
    android:layout_marginTop="@dimen/ten_dp"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/similar_photo"
            android:layout_width="140dp"
            android:layout_height="140dp"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingStart="@dimen/four_dp">

            <TextView
                android:textSize="@dimen/fifteen_sp"
                android:textColor="@color/black"
                android:id="@+id/similar_title"
                android:layout_width="match_parent"
                android:layout_height="55dp"/>

            <LinearLayout
                android:layout_marginTop="@dimen/sixteen_dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="20dp">

                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:id="@+id/similar_shipping"
                    android:textSize="@dimen/fourteen_sp"/>

                <TextView
                    android:paddingStart="@dimen/sixteen_dp"
                    android:textSize="@dimen/fourteen_sp"
                    android:id="@+id/similar_days"
                    android:layout_width="100dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

            <TextView
                android:paddingStart="150dp"
                android:textColor="@color/theme_purple"
                android:textStyle="bold"
                android:textSize="@dimen/six_teen_sp"
                android:layout_marginTop="@dimen/twelve_dp"
                android:id="@+id/similar_cost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>