<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_purple</item>
        <item name="colorPrimaryDark">@color/theme_purple_dark</item>
        <item name="colorAccent">@color/check_box_color</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/uncheck_color</item>
        <item name="android:textColorSecondary">@color/check_box_color</item>
    </style>

    <style name="tabLayout" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="tabIndicatorColor">@color/check_box_color</item>-->
        <item name="tabIndicatorHeight">@dimen/two_dp</item>
        <item name="tabPaddingStart">@dimen/six_dp</item>
        <item name="tabPaddingEnd">@dimen/six_dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabBackground">@color/theme_purple</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/btn_text_color</item>
    </style>

    <style name="tabLayout2" parent="Widget.Design.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/sixty_dp</item>
        <!--<item name="tabIndicatorColor">@color/check_box_color</item>-->
        <item name="tabIndicatorHeight">@dimen/two_dp</item>
        <item name="tabPaddingStart">@dimen/six_dp</item>
        <item name="tabPaddingEnd">@dimen/six_dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabBackground">@color/theme_purple</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/btn_text_color</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/fourteen_sp</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
